<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#000">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/videoView"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        android:background="@drawable/ng_onboarding_vignette"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_giant"
        android:layout_marginEnd="@dimen/margin_giant"
        android:fontFamily="@font/sf_pro_text_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="-0.02"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videoView"
        tools:text="Unique Business Extensions" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_giant"
        android:layout_marginTop="@dimen/margin_big_half"
        android:layout_marginEnd="@dimen/margin_giant"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:lines="5"
        android:textColor="#ADADAE"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Multi-Profiles for Telegram (up to 100), Forward as copy, Admin Shortcuts" />

</androidx.constraintlayout.widget.ConstraintLayout>